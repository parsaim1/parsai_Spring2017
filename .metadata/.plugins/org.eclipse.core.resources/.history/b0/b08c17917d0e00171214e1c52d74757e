package textExcel;

//Update this file with your own code.

public class SpreadsheetLocation implements Location {
   
	private String locName;

    public int getRow() {
        // TODO Auto-generated method stub
        return Integer.parseInt(locName.substring(1)) -1;
    }

    public int getCol() {
    	return Integer.parseInt(locName.toUpperCase().substring(0, 1)) - 65;
    	
    	/*int test = 0;
        char letter = 'A';
    	while (locName.charAt(0) != letter) {
    		test++;
    		letter++;
    	}
    	return test - 1;     */
    }
    	
    public SpreadsheetLocation(String specificCell) {
    	locName = specificCell;
    	
    }

}

package textExcel;

public class TextCell implements Cell {
	
	private String text;
	public TextCell (String textInput) {   //constructor
		text = textInput;
	}
	@Override
	public String abbreviatedCellText() {
		String text2 = text.substring(1, text.length() - 1);   //gets rid of quotes
		if (text2.length() > 10) {
			return text2.substring(0, 10);    //truncates texts longer than 10 characters
		} else {
			return text2;
		}
		/*} else if (text.length() == 10) {	//no need to change the text since exactly 10 characters long
			return text;
		} else {
			while (text.length() < 10) {    //adds spaces so the cell will be 10 characters long if the text itself is shorter
				text += " ";
			}
			return text;
		} */
	}

	@Override
	public String fullCellText() {
		return "\"" + text + "\"";
	}

}

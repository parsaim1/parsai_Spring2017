package textExcel;

public class TextCell implements Cell {
	
	private String text;
	public TextCell (String textInput) {   //constructor
		text = textInput;
	}
	@Override
	public String abbreviatedCellText() {
		text = text.substring(1, text.length() - 1);   //gets rid of quotes
		if (text.length() > 10) {
			return text.substring(0, 11);    //truncates texts longer than 10 characters
		} else if (text.length() == 10) {	//no need to change the text since exactly 10 characters long
			return text;
		} else {
			while (text.length() < 11) {    //adds spaces so the cell will be 10 characters long if the text itself is shorter
				text += " ";
			}
			return text;
		}
	}

	@Override
	public String fullCellText() {
		return text;
	}

}
